<p>
  <strong>Title:</strong>
  <%= @movie.title %>
  by <%= @movie.user %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>Realease date:</strong>
  <%= @movie.realease_date %>
</p>

<p>
  <strong>Studio:</strong>
  <%= @movie.studio %>
</p>

<% if can? :edit, @movie %>
	<%= link_to 'Edit', edit_movie_path(@movie) %> |
<% end %>
<%= link_to 'Back', movies_path %>

<p>Me Gusta: <strong><%= @movie.likes.count %></strong></p>

<% if can? :like, Movie %>
	<%= render partial: "likes/action" %>
<% end %>

<% if can? :set_genre, @movie %>
	<%= render partial: "genres/form" %>
<% end %>

<% if can? :create, Review %>
	<%= render partial: 'reviews/form' %>
<% end %>


<h2>Reviews de la pelicula</h2>

<%= render partial: 'reviews/review', collection: @reviews %>